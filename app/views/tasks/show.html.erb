<h1><%= @task.title %></h1>

<div>
<%= @task.details %>
  <% if @task.completed? %>
      <div><i class="far fa-check-square"></i><span> This task is completed</span></div>
  <% else %>
      <div><i class="far fa-square"></i><span> This task is not completed yet</span></div>
  <% end %>
</div>

<div>
  <%= link_to "Back to list", tasks_path %>
</div>
